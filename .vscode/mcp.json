{
	"inputs": [
		{
			"id": "gb_mcp_pat",
			"type": "promptString",
			"description": "GitHub PAT (only prompted if GB_MCP_PAT env var is not set â€” needs: repo, read:org, workflow scopes)",
			"password": true
		}
	],
	"servers": {
		"github": {
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp/",
			"headers": {
				// In Codespaces: automatically uses the GB_MCP_PAT Codespaces secret (env var)
				// Locally on Debian 12: set GB_MCP_PAT in your shell profile, or it will prompt
				"Authorization": "Bearer ${env:GB_MCP_PAT}"
			}
		}
	}
}